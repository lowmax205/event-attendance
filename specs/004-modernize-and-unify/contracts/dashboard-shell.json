{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DashboardShellResponse",
  "type": "object",
  "properties": {
    "role": {
      "type": "string",
      "enum": ["admin", "moderator", "student"]
    },
    "brandTheme": {
      "type": "string",
      "description": "Tokenized theme identifier consumed by shared shell"
    },
    "navigation": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "label", "href"],
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "href": { "type": "string", "pattern": "^/" },
          "icon": { "type": "string" },
          "badge": {
            "type": "object",
            "properties": {
              "value": { "type": "integer" },
              "variant": { "type": "string" }
            },
            "required": ["value"],
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "primaryActions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "label"],
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "href": { "type": "string", "pattern": "^/" },
          "icon": { "type": "string" },
          "roleRestriction": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "layoutZones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["zoneId", "position", "breakpoints", "widgets"],
        "properties": {
          "zoneId": { "type": "string" },
          "position": {
            "type": "string",
            "enum": ["hero", "secondary", "sidebar", "footer"]
          },
          "breakpoints": {
            "type": "object",
            "additionalProperties": { "type": "integer" }
          },
          "widgets": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "stateMessages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["state", "context", "headline", "body"],
        "properties": {
          "state": {
            "type": "string",
            "enum": ["empty", "loading", "error", "success"]
          },
          "context": { "type": "string" },
          "headline": { "type": "string" },
          "body": { "type": "string" },
          "cta": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "href": { "type": "string", "pattern": "^/" }
            },
            "required": ["label"],
            "additionalProperties": false
          },
          "icon": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "role",
    "brandTheme",
    "navigation",
    "layoutZones",
    "stateMessages",
    "lastUpdated"
  ],
  "additionalProperties": false
}
